generator client {
  provider = "prisma-client-js"
  output   = "generated/"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int     @default(autoincrement()) @id
  email         String  @unique
  name          String?
  password      String
  description   String?
  music         Music[]
  history       History[]
  playlists     Playlist[]
  subscriptions Int[]
}

model Music {
  id          Int @default(autoincrement()) @id
  preview     String?
  title       String
  description String?
  path        String
  author      User? @relation(fields: [authorId], references: [id])
  authorId    Int
  listeners   History[]

  @@index([title])
  @@index([description])
}

model History {
  id        Int @default(autoincrement()) @id
  user      User? @relation(fields: [authorId], references: [id])
  authorId  Int
  music     Music? @relation(fields: [musicId], references: [id])
  musicId   Int
  listenAt  DateTime @default(now())
}

model Playlist {
  id          Int @default(autoincrement()) @id
  name        String
  description String?
  author      User? @relation(fields: [authorId], references: [id])
  authorId    Int
  access      Boolean
  musicList   Int[]
}